<div class="row">
  <div class="col-md">
    <h2 class="mb-5"><%= @user.name %></h2>
    <table>
      <tr>
        <td>created:</td>
        <td><%= @user.created_at %></td>
      </tr>
      <tr>
        <td>karma:</td>
        <td><%= @user.karma %></td>
      </tr>
      <tr>
        <td>about:</td>
        <td><%= @user.about %></td>
      </tr>
    </table>
  </div>
  <div class="col-md">
    <h2 class="mb-5">admin zone</h2>
    <%= link_to 'ban user', nil, class: 'btn btn-warning' %>
    <%= link_to 'unban user', nil, class: 'btn btn-success' %>
    <div class="mt-5 mb-2">
      <%= link_to 'delete comments', nil, class: 'btn btn-danger' %>
    </div>
    <div class="mb-2">
      <%= link_to 'delete posts', nil, class: 'btn btn-danger' %>
    </div>
    <div class="mb-2">
      <%= link_to 'delete user', nil, class: 'btn btn-danger' %>
    </div>
  </div>
</div>